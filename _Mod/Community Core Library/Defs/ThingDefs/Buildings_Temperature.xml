<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<ThingDef Name="BuildingBase" Abstract="True">
		<category>Building</category>
		<soundImpactDefault>BulletImpactMetal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>BuildingRubble</filthLeaving>
	</ThingDef>
	<ThingDef ParentName="BuildingBase">
		<defName>Campfire</defName>
		<label>campfire</label>
		<description>A temporary heat source which burns for a few days. It may be used to cook simple meals anywhere, but as with all heat sources, it must be placed indoors so it has a closed space to heat.</description>
		<thingClass>Building_Campfire</thingClass>
		<category>Building</category>
		<graphicPath>Things/Building/Misc/Campfire</graphicPath>
		<graphicClass>Graphic_Single</graphicClass>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<constructEffect>ConstructDirt</constructEffect>
		<tickerType>Normal</tickerType>
		<drawerType>RealtimeOnly</drawerType>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>200</WorkToMake>
			<Flammability>0</Flammability>
		</statBases>
		<selectable>true</selectable>
		<size>(1,1)</size>
		<costList>
			<WoodLog>30</WoodLog>
		</costList>
		<soundImpactDefault>BulletImpactGround</soundImpactDefault>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<placeWorkers>
			<li>PlaceWorker_Heater</li>
		</placeWorkers>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<comps>
			<li>
				<compClass>CompGlower</compClass>
				<glowRadius>10</glowRadius>
				<glowColor>(252,187,113,0)</glowColor>
			</li>
			<li>
				<compClass>CompHeatPusher</compClass>
				<heatPerSecond>21</heatPerSecond>
				<heatPushMaxTemperature>28</heatPushMaxTemperature>
			</li>
			<li>
				<compClass>CompGatherSpot</compClass>
			</li>
			<li>
				<compClass>CompLifespan</compClass>
				<lifespanTicks>60000</lifespanTicks>
			</li>
			<li>
				<compClass>CommunityCoreLibrary.CompFoodSource</compClass>
			</li>
		</comps>
		<designationCategory>Temperature</designationCategory>
		<rotatable>true</rotatable>
		<designationHotKey>I</designationHotKey>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<recipes>
			<li>CookMealSimpleCampfire</li>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<deconstructible>false</deconstructible>
		</building>
	</ThingDef>
</Defs>